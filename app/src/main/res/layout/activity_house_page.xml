<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.studenckie.apartamenty.adapterlist.HouseActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/house_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/mieszkanie1" />

        <TextView
            android:id="@+id/house_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Dobry opis"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/house_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="10000"
            android:textSize="40sp" />
    </LinearLayout>

</RelativeLayout>